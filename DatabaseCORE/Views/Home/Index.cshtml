@model DatabaseCORE.Models.Newsletter

@{
	ViewData["Title"] = "Carshop";
}


<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

<environment names="Development">
	<link rel="stylesheet" href="~/css/landingpage.css" />
	<!--<img src="images/bg-masthead.jpg" alt="Sample Photo" />-->
</environment>


<body>
	<div class="container">
		<div class="row">
			<div class="col">

				<div class="wrapper">

					<form asp-action="newsletterSignup">
						<h3>
							Subscribe to our newsletter!
						</h3>
						<input type="text" asp-for="Email" class="form-control" style="width:400px; position:center" />
						@if (ViewBag.subscribed == true)
						{
							<div class="alert alert-success  alert-dismissible">
								<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
								<strong>Success!</strong> @Html.ValidationMessageFor(m => m.Email)
							</div>
						}
						@if (ViewBag.subscribed == false)
						{
							<div class="alert alert-danger  alert-dismissible">
								<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
								<strong>Danger!</strong> @Html.ValidationMessageFor(m => m.Email)
							</div>
						}
						<input type="submit" value="Subscribe" class="btn btn-primary" />
					</form>
				</div>
				<div class="col"></div>
			</div>
		</div>
	</div>
</body>

